<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Toolbar.ThemeOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="normal_rounded_corners_shape_appearance">
        <item name="cornerSize">@dimen/radius_normal</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="bottom_rounded_corners_shape_appearance">
        <item name="cornerSize">@dimen/radius_medium</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="medium_rounded_corners_shape_appearance">
        <item name="cornerSize">@dimen/radius_medium</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circle_shape_appearance">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTheme.ParentViewStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AppTheme.ParentViewStyle.NoPadding" parent="AppTheme.ParentViewStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="AppTheme.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="endIconTint">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="boxBackgroundColor">@color/app_background_color</item>
        <item name="colorError">@color/error</item>
        <item name="hintEnabled">true</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/AppTheme.TextInputStyle.Error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="boxStrokeColor">@color/input_box_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_normal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.SpinnerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="endIconTint">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="boxBackgroundColor">@color/app_background_color</item>
        <item name="colorError">@color/error</item>
        <item name="hintEnabled">false</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/AppTheme.TextInputStyle.Error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="boxStrokeColor">@color/input_box_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_normal</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_normal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.TextInputStyle.Error">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="AppTheme.TextInputStyle.TextInputEditText">
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.BigTextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="AppTheme.NormalTextStyle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.NormalBoldTextStyle" parent="AppTheme.NormalTextStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SmallTextStyle">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.PrimaryClickableView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="AppTheme.PrimaryClickableView.NoPadding" parent="AppTheme.PrimaryClickableView">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:padding">@dimen/padding_small_normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PrimaryTextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_normal_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerSize">0dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/padding_tiny_tiny</item>
    </style>
</resources>